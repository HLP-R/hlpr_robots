<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="poli_neck_head">

    <xacro:macro name="poli_neck_head" params="parent *origin">

        <joint name="pan_base_joint" type="fixed">
            <xacro:insert_block name="origin" />
            <parent link="${parent}" />
            <child link="pan_base_link" />
        </joint>

        <link name="pan_base_link">
            <inertial>
                <mass value="0.1"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia ixx="0.01"  ixy="0.0"  ixz="0.0"
                         iyy="0.01"  iyz="0.0"
                         izz="0.01" />
            </inertial>
        </link>

        <joint name="pan_joint" type="revolute">
            <origin xyz="0 0 0.131" rpy="0 0 0" />
            <parent link="pan_base_link" />
            <child link="pan_link" />
            <axis xyz="0 0 1"/>
            <limit effort="6.0" lower="-0.523599" upper="0.523599" velocity="6.597"/>
        </joint>

        <link name="pan_link">
          <inertial>
            <origin xyz="-0.00051082 4.6611E-05 -0.0079247" rpy="0 0 0" />
            <mass value="0.16588" />
            <inertia
              ixx="0.00020336"
              ixy="3.9501E-09"
              ixz="6.1826E-06"
              iyy="0.00018544"
              iyz="4.4503E-07"
              izz="5.7673E-05" />
          </inertial>
          <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
              <mesh filename="package://poli_description/meshes/Yaw.STL" />
            </geometry>
            <material name="">
              <color rgba="0.75294 0.75294 0.75294 1" />
            </material>
          </visual>
          <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
              <box size="0.04 0.085 0.14" />
            </geometry>
          </collision>
        </link>

        <joint name="tilt_joint" type="revolute">
          <origin xyz="0 0 0" rpy="-1.570796326794897 0 0" />
          <parent link="pan_link" />
          <child link="tilt_link" />
          <axis xyz="0 0 1" />
          <limit effort="6.0" lower="-0.174533" upper="0.785398" velocity="6.597"/>
        </joint>

        <link name="tilt_link">
          <inertial>
            <!--origin xyz="0.061895 -0.074515 0.00018285" rpy="0 0 0" /-->
            <origin xyz="0 -0.074515 0.00018285" rpy="0 0 0" />
            <mass value="1.6753" />
            <inertia
              ixx="0.012547"
              ixy="-0.00028107"
              ixz="-1.3825E-05"
              iyy="0.019618"
              iyz="-1.4168E-06"
              izz="0.012573" />
          </inertial>
          <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
              <mesh filename="package://poli_description/meshes/Pitch.STL" />
            </geometry>
            <material name="">
              <color rgba="0.75294 0.75294 0.75294 1" />
            </material>
          </visual>
          <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
              <box size="0.32 0.2 0.35" />
            </geometry>
          </collision>
        </link>

    </xacro:macro>

</robot>
